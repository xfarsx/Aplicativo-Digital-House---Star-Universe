<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="drawerArrowStyle">@style/DrawIcon</item>
</style>

    <!-- String padrão do app. -->
    <style name="StringStyleStandard">
<item name="android:textAllCaps">false</item>
<item name="android:textColor">#ffffff</item>
<item name="android:textSize">18sp</item>
</style>

    <!-- EditText Padrão App. -->
<style name="StringStyleStarUniverse" parent="Widget.AppCompat.EditText">
    <item name="android:cursorVisible">false</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/staruniverse</item>
    <item name="android:textColorHint">#96803E</item>
    <item name="android:textColorHighlight">@color/black</item>
</style>

    <!-- String padrão Bottom. -->

    <style name="TextViewLogin">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/staruniverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">12dp</item>
    </style>


    <!-- String padrão Bottom. -->

    <style name="StringStyleStarUniverse2">
<item name="android:textAllCaps">false</item>
<item name="android:textColor">@color/staruniverse</item>
<item name="android:textSize">16sp</item>
</style>

    <!-- Icon bar Padrão App -->
    <style name="DrawIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
        <item name="spinBars">true</item>
    </style>


    <!-- FullScreen theme. -->
<style name="FullScreen" parent="AppTheme">
<item name="windowActionBar">false</item>
<item name="windowNoTitle">true</item>
<item name="android:windowFullscreen">true</item>
</style>

    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    </resources>
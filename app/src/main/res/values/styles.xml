<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
    <!-- Customize your theme here. -->
    <item name="actionBarTheme">@style/BarStarUniverse</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

    Login
<style name="LoginInput" parent="Widget.Design.TextInputLayout">
<item name="android:textColor">@color/staruniverse</item>
<item name="android:textColorHint">@color/staruniverse</item>
</style>

<style name="LoginInput.Edit" parent="Widget.AppCompat.EditText">
<item name="colorControlActivated">@color/staruniverse</item>
<item name="colorControlNormal">@color/staruniverse</item>
<item name="colorControlHighlight">@color/staruniverse</item>
</style>

<style name="LoginInputLabel" parent="@android:style/TextAppearance">
<item name="android:textColor">@color/staruniverse</item>
</style>
<style name="StringStyleStandard">
<item name="android:textAllCaps">false</item>
<item name="android:textColor">#ffffff</item>
<item name="android:textSize">18sp</item>
</style>

<style name="StringStyleStarUniverse">
<item name="android:textAllCaps">false</item>
<item name="android:textColor">@color/staruniverse</item>
<item name="android:textSize">18sp</item>
</style>
<style name="StringStyleStarUniverse2">
<item name="android:textAllCaps">false</item>
<item name="android:textColor">@color/staruniverse</item>
<item name="android:textSize">16sp</item>
</style>
<style name="StringStyleBlack">
<item name="android:textAllCaps">false</item>
<item name="android:textColor">#000000</item>
<item name="android:textSize">18sp</item>
</style>
<style name="BarStarUniverse">
<item name="android:textAllCaps">false</item>
<item name="android:textColor">#000000</item>
<item name="android:background">@color/staruniverse</item>
</style>

    <!-- FullScreen theme. -->
<style name="FullScreen" parent="AppTheme">
<item name="windowActionBar">false</item>
<item name="windowNoTitle">true</item>
<item name="android:windowFullscreen">true</item>
</style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
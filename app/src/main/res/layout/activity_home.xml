<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp"
    tools:context="br.com.digitalhouse.staruniverse.home.HomeActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fundo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


    <LinearLayout
        android:id="@+id/layout_quiz"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_button"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layout_ranking"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_favoritos"
        app:layout_constraintVertical_bias="0.108">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btn_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quiz" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ranking"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layout_noticias"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_quiz"
        app:layout_constraintTop_toBottomOf="@+id/layout_filmes"
        app:layout_constraintVertical_bias="0.138"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp">
            <ImageView
                android:id="@+id/btn_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ranking"
                />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_favoritos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/round_button"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/layout_filmes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btn_favoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorito" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_personagens"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/round_button"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_filmes"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">
    <ImageView
        android:id="@+id/btn_personagens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/personagens"/>
</RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_noticias"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_button"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_ranking"
        app:layout_constraintTop_toBottomOf="@+id/layout_personagens"
        app:layout_constraintVertical_bias="0.108">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/btn_noticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/noticias"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_filmes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/round_button"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/layout_personagens"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_favoritos"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/btn_filmes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filmes"/>
        </RelativeLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
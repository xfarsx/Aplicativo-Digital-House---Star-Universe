<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black"
    android:fillViewport="true"
    tools:context="br.com.digitalhouse.staruniverse.cadastro.CadastroActivity">

    <androidx.constraintlayout.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/torne_se_jedi_cadastro"
            android:textSize="28sp"
            android:textColor="@color/staruniverse"
            android:layout_marginBottom="72dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:hintTextAppearance="@style/LoginInputLabel"
            android:textColorHint="@color/staruniverse">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome"
                android:id="@+id/Nome"
                android:inputType="text"
                android:textColor="@color/staruniverse"
                android:theme="@style/LoginInput.Edit" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:hintTextAppearance="@style/LoginInputLabel"
            android:textColorHint="@color/staruniverse">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sobrenome"
                android:id="@+id/Sobrenome"
                android:inputType="text"
                android:textColor="@color/staruniverse"
                android:theme="@style/LoginInput.Edit" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:hintTextAppearance="@style/LoginInputLabel"
            android:textColorHint="@color/staruniverse">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/e_mail"
                android:id="@+id/Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/staruniverse"
                android:theme="@style/LoginInput.Edit" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:hintTextAppearance="@style/LoginInputLabel"
            android:textColorHint="@color/staruniverse">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome_jedi"
                android:id="@+id/Jedi"
                android:inputType="text"
                android:textColor="@color/staruniverse"
                android:theme="@style/LoginInput.Edit" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:hintTextAppearance="@style/LoginInputLabel"
            android:textColorHint="@color/staruniverse">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/senha"
                android:inputType="textPassword"
                android:id="@+id/Senha"
                android:textColor="@color/staruniverse"
                android:theme="@style/LoginInput.Edit" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:hintTextAppearance="@style/LoginInputLabel"
            android:textColorHint="@color/staruniverse">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirmar_senha"
                android:inputType="textPassword"
                android:id="@+id/ConfirmarSenha"
                android:textColor="@color/staruniverse"
                android:theme="@style/LoginInput.Edit" />
        </android.support.design.widget.TextInputLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnCadastro"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="-1dp"
        android:backgroundTint="@color/staruniverse"
        android:text="@string/cadastrar"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnVoltar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnCadastro"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="-128dp"
        android:backgroundTint="@color/staruniverse"
        android:text="@string/voltar"
        android:textColor="@color/black" />

</RelativeLayout>


    </LinearLayout>

    </androidx.constraintlayout.ConstraintLayout>


</ScrollView>